<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="6dp"
        android:top="6dp"
        android:left="6dp"
        android:right="6dp">
        <shape android:shape="oval">
            <solid
                android:color="@color/location_dot"/>
            <stroke
                android:width="2dp"
                android:color="#ffffff"/>
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:top="5dp"
        android:left="5dp"
        android:right="5dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#ddd"/>
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>
</layer-list>
