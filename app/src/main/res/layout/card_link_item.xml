<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="6dp">

        <ImageView
            android:id="@+id/linkIconImageView"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitCenter"
            />

        <TextView
            android:id="@+id/linkTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/linkIconImageView"
            android:textAppearance="@style/TextAppearance.ListItemTitle"
            tools:text="CyclOSM" />

        <TextView
            android:id="@+id/linkDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/linkIconImageView"
            android:layout_below="@id/linkTitleTextView"
            android:textAppearance="@style/TextAppearance.ListItemText"
            tools:text="@string/link_openrouteservice_description" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

