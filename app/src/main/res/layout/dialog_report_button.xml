<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:divider="?android:dividerHorizontal"
        android:orientation="vertical"
        android:showDividers="middle|end">

        <TextView
            android:id="@+id/report_top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TO DO If you see a barrier, like and subscribe!" />

        <LinearLayout
            android:id="@+id/layout_barrier"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/report_barrier_icon"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_barrier" />

            <TextView
                android:id="@+id/report_barrier_text"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TO DO Report Barrier" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_construction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/report_construction_icon"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_construction" />

            <TextView
                android:id="@+id/report_construction_text"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" TO DO Report Construction" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_other_issue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/report_other_icon"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="?"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/report_other_text"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" TO DO Report other issue" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
